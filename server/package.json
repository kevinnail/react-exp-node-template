{
  "name": "server",
  "version": "1.0.0",
  "description": "Express server",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:watch": "nodemon server.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --verbose --runInBand --forceExit",
    "test:watch": "npm run test -- --watch",
    "setup-db": "node -r dotenv/config setup-db.js",
    "setup-test-db": "node -r dotenv/config setup-test-db.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.js\""
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/__tests__/**",
      "!**/node_modules/**",
      "!**/coverage/**"
    ]
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0"
  }
}
